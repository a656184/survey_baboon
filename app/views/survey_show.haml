.container.well
  %br
  .jumbotron
    %h1= @survey.title
    %p= @survey.description
  %form{ action: "/protected/surveys/#{@survey.id}", method: 'post'}
    
    %input{type: 'hidden', name: 'survey_participation_id', value: @survey_participation.id }

    - @survey.questions.each do |question|
      %fieldset
        %legend= question.content
        - question.choices.each do |choice|
          %label.radio.inline
            %input{type: 'radio', name: "survey[#{question.id}]", value: choice.id }
            = choice.content
        %br
    %hr
    %input.btn.btn-large.btn-primary{type: 'submit', value: 'Submit Survey'}

